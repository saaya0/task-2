<h1>Editing Book</h1>
<% if @book.errors.any? %>
	<div class = "edit-error">
		<div class = "edit-main">
			<%= @book.errors.count %>error prohibited this book from being saved:
		</div>
		<div class = "edit-text">
			<% @book.errors.full_messages.each do |message| %>
		    	<%= message %>
		  	<% end %>
		</div>
	</div>
<% else %>
<% end %>

<%= form_with model:@book, local: true do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<div>
		<%= f.submit 'Update Book' %>
	</div>
<% end %>